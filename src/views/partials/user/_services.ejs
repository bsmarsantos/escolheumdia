<link rel="stylesheet" href="styles/user/services.css">

<div class="container--services">
  <div class="header">
    <h1>Meus serviços</h1>
    <svg onclick="showHideForm()" width="24" height="24" viewBox="0 0 24 24"><path d="M24 10h-10v-10h-4v10h-10v4h10v10h4v-10h10z"/></svg>
  </div>

  <form action="" method="post" id="updateForm" class="d--none">
		<input type="hidden" id="serviceId" name="id" value="">
    <h1 class="form--title">Editar serviço</h1>

    <div class="form--field">
      <label for="serviceName">Nome</label>
      <input id="serviceName" type="text" name="name" value="">
    </div>

    <div class="form--twoColumns">
      <div class="form--field">
        <label for="servicePrice">Preço</label>
        <input id="servicePrice" type="text" name="price" value="">
      </div>
      <div class="form--field">
        <label for="serviceDuration">Duração (em minutos)</label>
        <input id="serviceDuration" type="text" name="service" value="">
      </div>
    </div>

    <input type="submit" name="submit" value="Guardar Serviço" class="btn btn--round btn--end">
  </form>

  <table>
    <tr>
      <th>id</th>
      <th>Nome</th>
      <th>Preço</th>
      <th>Duração</th>
      <th></th>
    </tr>
    <% data.services.forEach((order, i) => { %>
      <tr>
        <td>
          <%= data.services[i].id %>
        </td>
        <td><%= data.services[i].name %></td>
        <td><%= data.services[i].price %>€</td>
        <td><%= data.services[i].duration %> minutos</td>
        <td>
          <svg onclick="updateServices(event)" width="24" height="24" viewBox="0 0 24 24"><path d="M18.363 8.464l1.433 1.431-12.67 12.669-7.125 1.436 1.439-7.127 12.665-12.668 1.431 1.431-12.255 12.224-.726 3.584 3.584-.723 12.224-12.257zm-.056-8.464l-2.815 2.817 5.691 5.692 2.817-2.821-5.693-5.688zm-12.318 18.718l11.313-11.316-.705-.707-11.313 11.314.705.709z"/></svg>
          <svg onclick="deleteServices('<%= data.services[i].id %>')" width="24" height="24" viewBox="0 0 24 24"><path d="M3 6v18h18v-18h-18zm5 14c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm5 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm5 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm4-18v2h-20v-2h5.711c.9 0 1.631-1.099 1.631-2h5.315c0 .901.73 2 1.631 2h5.712z"/></svg>
        </td>
      </tr>
    <% }) %>
  </table>
</div>

<script src="scripts/user/services.js"></script>
