<link rel="stylesheet" href="styles/user/clients.css">

<div class="container--clients">
  <div class="header">
    <h1>Meus clientes</h1>
    <svg onclick="showHideForm()" width="24" height="24" viewBox="0 0 24 24"><path d="M24 10h-10v-10h-4v10h-10v4h10v10h4v-10h10z"/></svg>
  </div>

  <form action="" method="post" id="updateForm" class="d--none">
		<input type="hidden" id="clientId" name="id" value="">
    <h1 class="form--title">Editar cliente</h1>
    <div class="form--twoColumns">
      <div class="form--field">
        <label for="clientLogo">Logo</label>
        <input id="clientLogo" type="text" name="logo" value="">
      </div>
      <div class="form--field">
        <label for="clientName">Nome</label>
        <input id="clientName" type="text" name="name" value="">
      </div>
    </div>

    <div class="form--twoColumns">
      <div class="form--field">
        <label for="clientNIF">NIF</label>
        <input id="clientNIF" type="number" name="nif" value="">
      </div>
      <div class="form--field">
        <label for="clientEmail">Email</label>
        <input id="clientEmail" type="email" name="email" value="">
      </div>
    </div>

    <div class="form--field">
      <label for="clientStreet">Rua</label>
      <input id="clientStreet" type="text" name="street" value="">
    </div>

    <div class="form--threeColumns">
      <div class="form--field">
        <label for="clientCity">Cidade</label>
        <input id="clientCity" type="text" name="city" value="">
      </div>
      <div class="form--field">
        <label for="clientZipCode">Código Postal</label>
        <input id="clientZipCode" type="text" name="zip_code" value="">
      </div>
      <div class="form--field">
        <label for="clientCountry">País</label>
        <input id="clientCountry" type="text" name="country" value="">
      </div>
    </div>

    <div class="form--field__checkbox">
      <input id="clientRGPD" type="checkbox" name="rgpd">
      <label for="clientRGPD">RGPD - Termos e Condições</label>
    </div>

    <input type="submit" name="submit" value="Guardar Cliente" class="btn btn--round btn--end">
  </form>

  <table>
    <tr>
      <th>Logo</th>
      <th>id</th>
      <th>Nome</th>
      <th>Nif</th>
      <th>Email</th>
      <th>Localidade</th>
      <th>Cód. Postal</th>
      <th>País</th>
      <th> </th>
    </tr>
    <% data.clients.forEach((order, i) => { %>
      <tr>
        <td>
          <img class="avatar" src="<%= data.clients[i].logo %>" alt="Logo">
        </td>
        <td><%= data.clients[i].id %></td>
        <td><%= data.clients[i].name %></td>
        <td><%= data.clients[i].nif %></td>
        <td><%= data.clients[i].email %></td>
        <td><%= data.clients[i].city %></td>
        <td><%= data.clients[i].zip_code %></td>
        <td><%= data.clients[i].country %></td>
        <td>
          <svg onclick="updateClient(event)" width="24" height="24" viewBox="0 0 24 24"><path d="M18.363 8.464l1.433 1.431-12.67 12.669-7.125 1.436 1.439-7.127 12.665-12.668 1.431 1.431-12.255 12.224-.726 3.584 3.584-.723 12.224-12.257zm-.056-8.464l-2.815 2.817 5.691 5.692 2.817-2.821-5.693-5.688zm-12.318 18.718l11.313-11.316-.705-.707-11.313 11.314.705.709z"/></svg>
          <svg onclick="deleteClient('<%= data.clients[i].id %>')" width="24" height="24" viewBox="0 0 24 24"><path d="M3 6v18h18v-18h-18zm5 14c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm5 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm5 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm4-18v2h-20v-2h5.711c.9 0 1.631-1.099 1.631-2h5.315c0 .901.73 2 1.631 2h5.712z"/></svg>
        </td>
      </tr>
    <% }) %>
  </table>
</div>

<script src="scripts/user/client.js"></script>
