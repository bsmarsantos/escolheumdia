<link rel="stylesheet" href="styles/user/bookings.css">

<div class="container--bookings">

    <div class="header--bookings">
      <h1>Minhas reservas</h1>
    </div>

  <table>
    <tr>
      <th>id</th>
      <th>Data/Hora</th>
      <th>Funcionário</th>
      <th>Serviço</th>
      <th>Nº fatura</th>
      <th> </th>
    </tr>
    <% data.reservations.forEach((order, i) => { %>
      <tr>
        <td><%= data.reservations[i].id %></td>
        <td><%= data.reservations[i].date_time %></td>
        <td><%= data.reservations[i].id_staff %></td>
        <td><%= data.reservations[i].id_service %></td>
        <td></td>
        <td>
          <svg onclick="deleteReservation('<%= data.reservations[i].id %>')" width="24" height="24" viewBox="0 0 24 24"><path d="M3 6v18h18v-18h-18zm5 14c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm5 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm5 0c0 .552-.448 1-1 1s-1-.448-1-1v-10c0-.552.448-1 1-1s1 .448 1 1v10zm4-18v2h-20v-2h5.711c.9 0 1.631-1.099 1.631-2h5.315c0 .901.73 2 1.631 2h5.712z"/></svg>
        </td>
      </tr>
    <% }) %>
  </table>
</div>
